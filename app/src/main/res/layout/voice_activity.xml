<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout8">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/avatar_iv" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            tools:text="apon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_tv" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar_iv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="18sp"
            android:textColor="@color/black"/>
    <TextView
            tools:text="connecting..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_tv" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name_tv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <me.apon.audiowave.LineBarWave
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/lineBarWave" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/status_tv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/voice_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_bt" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="@color/design_default_color_error"
            android:textColor="#ffffff"/>
    <Button
            android:text="@string/voice_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ok_bt" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/cancel_bt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="@color/colorPrimary" android:textColor="#ffffff"/>
</androidx.constraintlayout.widget.ConstraintLayout>
